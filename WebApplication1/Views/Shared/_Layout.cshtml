<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link href="~/css/header.css" rel="stylesheet" />
</head>
<body>
    @if (ViewData["ShowHeader"] == null)
    {
        <div id="header">
            <div class="logo-container"> 
                <a href="/"><img src="~/imgs/logo.svg" width="100%" height="100%"></a>
            </div>
            <form asp-action="Finder" asp-controller="Catalog" method="post">
                <div class="searcher-container">
                    <input name="query" type="text" id="searcher">
                    <!--<button type="submit" id="search-button"><b>Найти</b></button>-->
                    <button type="submit" id="search-button"></button>
                </div>
            </form>
            <div class="navbar-container">
                <div class="navbar-el">
                    <a asp-controller="Catalog" asp-action="Index">Товары</a>
                </div>
                <div class="navbar-el">
                    <a asp-controller="Catalog" asp-action="MyCart">Корзина</a>
                </div>
                <div class="navbar-el">
                    <a asp-controller="User" asp-action="Favorites">Избранное</a>
                </div>
            </div>
            <div class="profile-container" style="margin-left: 10vw;">
                <!--<div id="auth-container">
                    @if (User.Identity.Name != null)
                    {
                        <a asp-controller="User" asp-action="Index">@User.Identity.Name</a>
                        <a asp-controller="User" asp-action="Logout" class="exit-profile">(Выйти)</a>
                    } else
                    {
                        <a asp-controller="User" asp-action="Login">Войти</a>
                    }
                </div>-->
                <div id="avatar-container">
                    <a asp-action="Index" asp-controller="User"><img src="~/imgs/avatar.png"></a>
                </div>
            </div>
        </div>
        <div id="mobile-header">
            <div class="menu">
                <input type="checkbox" id="burger-checkbox" class="burger-checkbox">
                <label for="burger-checkbox" class="burger"></label>
                <ul class="menu-list">
                    <li>
                        <a class="menu-item" asp-controller="Catalog" asp-action="Index">Товары</a>
                    <li>
                    <li>
                        <a class="menu-item" asp-controller="Catalog" asp-action="MyCart">Корзина</a>
                    <li>
                    <li>
                        <a class="menu-item" asp-controller="User" asp-action="Index" method="post">Профиль</a>
                    </li>
                    <li>
                        <a class="menu-item" asp-controller="User" asp-action="Favorites">Избранное</a>
                    </li>
                </ul>
            </div>
            <div class="searcher-container">
                <form width="100%" height="100%" asp-action="Finder" asp-controller="Catalog" method="post">
                    <input name="query" type="text" id="searcher">
                    <!--<button type="submit" id="search-button"><b>Найти</b></button>-->
                    <button type="submit" id="search-button"></button>
                </form>
            </div>
            <div class="mobile-logo">
                <a href="/">
                    <img src="~/imgs/logo.svg" width="100%" height="100%" />
                </a>

            </div>
        </div>
    } else
    {
        <style>
            body {
                background-color: #D9D9D9;
            }
            #content {
                background-color: white;
                box-shadow: -.6vw .8vw 1.8vw #989898;
                padding-bottom: 8vh;
                padding-top: 5vh;
                border-radius: 1.4vw;
            }

        </style>
    }

    @RenderBody()
    @if (ViewData["ShowHeader"] == null)
    {
        <div id="footer">
            <div class="footer-work-time">
                <div class="contacts-title">
                    <span>Часы работы:</span>
                </div>
                <ul>
                    <li>
                        <div class="footer-time">
                            <div class="day-container">
                                <span>Понедельник</span>
                            </div>
                            <div class="time-cotnainer">
                                09.00-19.00
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="footer-time">
                            <div class="day-container">
                                <span>Вторник</span>
                            </div>
                            <div class="time-cotnainer">
                                09.00-19.00
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="footer-time">
                            <div class="day-container">
                                <span>Среда</span>
                            </div>
                            <div class="time-cotnainer">
                                09.00-19.00
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="footer-time">
                            <div class="day-container">
                                <span>Четверг</span>
                            </div>
                            <div class="time-cotnainer">
                                09.00-19.00
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="footer-time">
                            <div class="day-container">
                                <span>Пятница</span>
                            </div>
                            <div class="time-cotnainer">
                                09.00-19.00
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="footer-time">
                            <div class="day-container">
                                <span>Суббота</span>
                            </div>
                            <div class="time-cotnainer">
                                10.00-19.00
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="footer-time holiday">
                            <div class="day-container">
                                <span>Выходной</span>
                            </div>
                            <div class="time-cotnainer">
                                09.00-19.00
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="footer-contacts">
                <div class="contacts-title">
                    <span>Контакты:</span>
                </div>
                <div class="contacts-list">
                    <span class="contact-number">Тел: +7 (900) 329-22-09</span>
                    <span class="contact-number">Тел: +7 (843) 214-50-11</span>
                    <span class="contact-number">Тел: +7 (843) 214-50-01</span>
                    <span class="contact-number">Тел: +7 (952) 039-86-00</span>
                </div>
            </div>
            <div class="footer-logo">
                <img src="~/imgs/logo.svg"  width="100%" height="100%"/>
            </div>
        </div>
        }
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</html>