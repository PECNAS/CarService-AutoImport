@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model ViewModels.EditItemModel;


<form asp-action="EditItem" method="post">
    <input asp-for="Id" value="@ViewBag.item.Id" hidden />

    <label>Название</label>
    <input asp-for="Title" value="@ViewBag.item.Title" />
    <br />

    <label>Описание</label>
    <input asp-for="Description" value="@ViewBag.item.Description" />
    <br />

    <label>Цена</label>
    <input asp-for="Price" value="@ViewBag.item.Price" />
    <br />

    <label>Продавец</label>
    <input asp-for="Seller" value="@ViewBag.item.Seller" />
    <br />

    <label>Id машины</label>
    <input asp-for="CarId" value="@ViewBag.item.CarId" />
    <br />

    <button type="submit">Сохранить</button>
</form>