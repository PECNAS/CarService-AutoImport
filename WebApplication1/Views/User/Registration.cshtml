@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["ShowHeader"] = false;
}
@model ViewModels.RegModel;

<link href="~/css/login.css" rel="stylesheet" />
<link href="~/css/modal.css" rel="stylesheet" />

<script type="text/javascript">
	function close_modal() {
		document.querySelector("#modal-shadow").style.display = "none";
	}

	function view_psswd() {
		var psswd_input = document.querySelector("#Password");
		var eye = document.querySelector(".password-control");

		if (psswd_input.getAttribute("type") == "text") {
			psswd_input.setAttribute("type", "password");
			eye.classList.remove("view");
		} else {
			psswd_input.setAttribute("type", "text");
			eye.classList.add("view");
		}
	}
</script>

@if (ViewBag.IsValid == false)
{
	<div id="modal-shadow">
		<div id="error-modal">
			<div class="modal-image">
				<img src="~/imgs/logo.png" height="100%" width="100%" />
			</div>
			<div class="modal-text">
				<span class="modal-title">ВНИМАНИЕ</span>
				<span id="modal-text">
					@Html.ValidationMessageFor(Model => Model.Email)
				</span>
			</div>
			<button onclick="close_modal()" id="close-modal">X</button>
		</div>
	</div>
}

<div class="logo-container">
	<a href="/">
		<img src="~/imgs/logo.png" width="100%" height="100%" />
	</a>
</div>


<div class="inner-container">
	<div id="content">
		<div class="form-title">
			<span>РЕГИСТРАЦИЯ</span>
		</div>
		<div class="inputs-container">
			<form asp-action="Registration" method="post">
				<div class="input-row">
					<input autocomplete="off" type="text" asp-for="Email" placeholder="E-mail">
				</div>
				<div class="input-row">
					<input type="text" autocomplete="off" asp-for="PhoneNumber" placeholder="+7">
				</div>
				<div class="input-row">
					<input type="text" asp-for="Name" autocomplete="off" placeholder="Имя">
				</div>
				<div class="input-row" id="psswd-input">
					<input type="password" asp-for="Password" autocomplete="off" placeholder="Пароль">
					<a onclick="view_psswd()" href="#" class="password-control"></a>
				</div>
			
				<div class="btn-container">
					<button type="submit" id="send">СОЗДАТЬ</button>
				</div>
			</form>
		</div>
	</div>
	<div class="other-page-link">
		<span>У вас есть учетная запись? </span><a asp-action="Login">Войти</a>
	</div>
</div>
<script src="https://unpkg.com/imask" type="text/javascript"></script>
<script src="~/js/reg.js" type="text/javascript"></script>
<script>
	if ("@ViewBag.IsValid" != "") {
		window.email_valid = true;
		window.psswd_valid = false;
		window.phone_valid = true;
		window.name_valid = true;
	}
</script>