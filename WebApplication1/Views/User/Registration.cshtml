@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["ShowHeader"] = false;
}
@model ViewModels.RegModel;

<link href="~/css/login.css" rel="stylesheet" />

<script type="text/javascript">
	function close_modal() {
		document.querySelector("#modal-shadow").style.display = "none";
	}

	function view_psswd() {
		var psswd_input = document.querySelector("#Password");
		var eye = document.querySelector(".password-control");

		if (psswd_input.getAttribute("type") == "text") {
			psswd_input.setAttribute("type", "password");
			eye.classList.remove("view");
		} else {
			psswd_input.setAttribute("type", "text");
			eye.classList.add("view");
		}
	}
</script>

@if (ViewBag.IsValid == false)
{
	<div id="modal-shadow">
		<div id="error-modal">
			<span>@Html.ValidationMessageFor(Model => Model.Email)</span>
			<button onclick="close_modal()" id="close-modal">X</button>
		</div>
	</div>
}

<div class="inner-container">
	<div id="content">
		<div class="form-title">
			<span>РЕГИСТРАЦИЯ</span>
		</div>
		<div class="inputs-container">
			<form asp-action="Registration" method="post">
				<div class="input-row">
					<input type="text" asp-for="Email" placeholder="E-mail">
				</div>
				<div class="input-row">
					<input type="text" asp-for="PhoneNumber" placeholder="+7">
				</div>
				<div class="input-row">
					<input type="text" asp-for="Name" placeholder="Имя">
				</div>
				<div class="input-row" id="psswd-input">
					<input type="password" asp-for="Password" placeholder="Пароль">
					<a onclick="view_psswd()" href="#" class="password-control"></a>
				</div>
			
				<div class="btn-container">
					<button type="submit" id="send">СОЗДАТЬ</button>
				</div>
			</form>
		</div>
	</div>
	<div class="other-page-link">
		<span>У вас есть учетная запись? </span><a asp-action="Login">Войти</a>
	</div>
</div>
<script src="~/js/reg.js" type="text/javascript"></script>
